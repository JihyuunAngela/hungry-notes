<%- include('partials/header') -%>

<% var user; %>
<% user = user || {id: undefined} %>

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <% console.log(author._id) %>
<!-- ORIGINAL RECIPE OR... -->
      <% if (post.type == 'OriginalRecipe') { %>
          <h2><%= post.title %></h2>
          <span>Posted by <a href="/profile/<%= author._id %>"><%= author.userName %></a></span>
          <img class="img-fluid" src="<%= post.image%>" />
          <h3>Ingredients</h3>
          <p><%= post.ingredients %></p>
          <h3>Instructions</h3>
          <p><%= post.instructions %></p>
        <% } else { %>
<!-- OR LINKED RECIPE -->
          <h2><%= post.title %></h2>
          <p><a href="<%= post.link %>" target="_blank">link</a></p>
          <span>Posted by <a href="/profile/<%= author._id %>"><%= author.userName %></a></span>
        <% } %>

<!-- SAVED -->
      <div class="row justify-content-between">
        <% if (!(post.user == user.id)) { %>
          <% if (saved.length === 0) {%>
          <form
            class="col-1"
            action="/post/savePost/<%= post.id %>"
            method="POST"
          >
            <button class="btn btn-primary fa-regular fa-bookmark" type="submit"></button>
          </form>
          <% } else { %>
            <form
            class="col-1"
            action="/post/unsavePost/<%= post.id %>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-primary fa-solid fa-bookmark" type="submit"></button>
          </form>
          <% } %>
        <% } %>

<!-- LIKE -->
          <form
            class="col-1"
            action="/post/likePost/<%= post.id %>?_method=PUT"
            method="POST"
          >
            <button class="btn btn-primary fa fa-heart" type="submit"></button>
          </form>

        <h3 class="col-3">Likes: <%= post.likes %></h3>

<!-- EDIT POST -->
      <%if(post.user == user.id && post.type == 'OriginalRecipe'){ %>
        <a href="/post/edit/<%= post.id %>"><i class="btn btn-primary fa-solid fa-pen-to-square"></i></a>
        <%} else if (post.user == user.id && post.type == 'LinkedRecipe') {%>
        <a href="/post/edit/<%= post.id %>"><i class="btn btn-primary fa-solid fa-pen-to-square"></i></a>
        <% } %>
<!-- DELETE -->
        <%if(post.user == user.id && post.type == 'OriginalRecipe'){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%} else if (post.user == user.id && post.type == 'LinkedRecipe')  {%>
        <form
        action="/post/deletePostWithLink/<%= post.id %>?_method=DELETE"
        method="POST"
        class="col-3"
        >
        <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <% } %>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= post.caption %></p>
    </div>


    <!-- COMMENTS -->
    <div class="mt-5">

      <ul class="row list-unstyled">
        <% for(var i=0; i<comments.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <%= comments[i].comment%>
            <%= comments[i].createdAt %>
            <a href="/comments/edit/<%= comments[i]._id %>"><i class="fa-solid fa-pen-to-square"></i></a>
            <form
            action="/comments/deleteComment/<%= comments[i]._id %>?_method=DELETE"
            method="POST"
            class="col-3"
            >
              <button class="btn btn-primary fa fa-trash" type="submit"></button>
            </form>
          </li>
        <% } %>
        </ul>
  
      <h2>Add a note</h2>
      <form action="/comments/createComment/<%=post.id%>" enctype="application/x-www-form-urlencoded" method="POST">
        <div class="mb-3">
          <label for="comment" class="form-label"></label>
          <textarea class="form-control" id="comment" name="comment"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

  </div>
</div>

<%- include('partials/footer') -%>
